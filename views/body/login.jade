extends ../header/layout

block content
	.row.no-margin
		.col-xs-12.col-sm-12.col-md-12.col-lg-12.text-center.marged
			include ../header/logoSnap.svg
	.row.no-margin
		.col-xs-10.col-xs-offset-1.col-sm-10.col-sm-offset-1.col-md-4.col-md-offset-4.col-lg-4.col-lg-offset-4.marged.well
			form.form-horizontal(id="loginForm", method="post", action="/login")
				fieldset
					legend.text-center
						h2 Login
					.form-group
						label.col-md-2.col-lg-2.control-label(for="inputEmail") Pseudo
						.col-xs-12.col-sm-12.col-md-10.col-lg-10
							input.form-control.floating-label.input-lg#inputEmail(type="text" ,name="pseudo", placeholder="Votre Pseudo", pattern="[a-zA-Z0-9\.\-\_]{1,25}", data-hint="Inserer au max 25 caractères (A->Z|a->z|0->9|-|_|.)", required)
					.form-group
					.form-group
						label.col-md-2.col-lg-2.control-label(for='inputPassword') Password
						.col-xs-12.col-sm-12.col-md-10.col-lg-10
							input.form-control.floating-label.input-lg#inputPassword(type='password',name="mdp", placeholder='Votre Mot de passe', pattern="[a-zA-Z0-9\.\-\_]{1,25}" , data-hint="Inserer au max 25 caractères (A->Z|a->z|0->9|-|_|.)", required)
							//- .checkbox
							//- 	label
							//- 		input(type='checkbox')
							//- 		|	Checkbox
					.form-group
						.col-xs-12.col-sm-6.col-md-5.col-md-offset-1.col-lg-5.col-lg-offset-1
							button.btn.btn-primary.btn-block(type="submit") Valider
						.col-xs-12.col-sm-6.col-md-5.col-md-offset-1.col-lg-5.col-lg-offset-1
							button.btn.btn-flat.btn-default.btn-block(type='reset') Reset
					.form-group
						.col-md-10.col-md-offset-1#loader
						.col-md-12.marged
							#message
								//- button.close(type='button', data-dismiss='alert') ×
block foot
	include ../footer/footer
	script.
		NProgress.start();
		$(function() {
			$.material.init();
			var s = document.querySelector("#svg");
			setTimeout(function(){
				s.className.baseVal+=" animated flipInX";
				s.style.opacity=1;
				NProgress.done();
			}, 500);
		});
	script(src="/js/controler/login.js")
